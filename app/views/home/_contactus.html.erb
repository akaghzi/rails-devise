<!-- contacts information				 -->
<div class="contact">
	<h2>
		Contact 
		<!-- <span class="orange">
			{
			</span>
			or
			<span class="orange">
			}
		</span>  -->
		<span class="green">
			Us
		</span>
	</h2>
</div>
<hr>
<div class="header2">
	<!-- contacus starts -->
	<div class="container-fluid">
		<!-- UI # -->
		<div class="ui-301">			
			<div class="login-reg">
				<!-- Login Form -->
				<div class="login-reg-form">
					<!-- Form -->
					<!-- <form class="form-horizontal" role="form"> -->
						<%= form_for("/", html: {role: "form", class: "form-horizontal"}) do |f| %>
						<!-- Form Group -->
						<div class="form-group">
							<!-- Label -->
							<!-- <label for="user" class="col-sm-3 control-label">Full Name</label> -->
							<div class="col-md-offset-1 col-md-11 col-sm-12">
								<!-- Input -->
								<input type="text" class="form-control" id="user" placeholder="Enter Full Name">
							</div>
						</div>
						<div class="form-group">
							<!-- <label for="email" class="col-sm-3 control-label">Email</label> -->
							<div class="col-md-offset-1 col-md-11 col-sm-12">
								<input type="email" class="form-control" id="email" placeholder="Enter Email">
							</div>
						</div>
						<div class="form-group">
							<!-- <label for="phone" class="col-sm-3 control-label">Phone</label> -->
							<div class="col-md-offset-1 col-md-11 col-sm-12">
								<input type="phone" class="form-control" id="phone" placeholder="Enter Phone">
							</div>
						</div>
						<div class="form-group">
							<!-- <label for="message" class="col-sm-3 control-label">Message</label> -->
							<div class="col-md-offset-1 col-md-11 col-sm-12">
								<%= f.text_area :message, size: "40x8", class: "form-control", placeholder: "Enter Message Here ..."%>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-1 col-sm-11">
								<!-- Button -->
								<button type="submit" class="btn btn-green">Submit</button>&nbsp;
								<!-- <button type="submit" class="btn btn-white">Reset</button> -->
							</div>
						</div>
					<!-- </form> -->
					<% end %>
				</div>
			</div>					
		</div>
		<!-- contactus end -->	
	</div>
</div>
<!-- contact information -->

